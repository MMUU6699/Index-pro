<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/widget_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="Item Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/colorSurfaceInverse"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_item_season_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Season 1, Episode 1: Episode Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?attr/colorSurfaceInverse"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_item_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_toStartOf="@id/widget_item_release_time"
            android:textColor="?attr/colorSurfaceInverse"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <TextView
            android:id="@+id/widget_item_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            android:text="Time"
            android:textColor="?attr/colorSurfaceInverse"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />
    </RelativeLayout>
</LinearLayout>
